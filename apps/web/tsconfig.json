{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["@storybook/react"],
    "baseUrl": ".",
    "paths": {
      "@src/components/*": ["src/components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "orval.config.cjs",
    ".storybook/**/*",
    "mock/**/*.js",
    "postcss.config.cjs"
  ],
  "exclude": ["node_modules"]
}
